.container
  - if @user.orders.any?
    %h1.center= "#{@user.first_name}'s orders"
    %table.table.table-condensed
      %th.h3 Coffee
      %th.h3 Location
      %th.h3 Status
      %th.h3 Manage Order

      - @user.orders.each do |order|
        %tr
          %td= "#{order.size} #{order.coffee_type} with #{order.milk}"
          %td= "#{order.shop.street_num} #{order.shop.street}, #{order.shop.suburb}, #{order.shop.state}"
          %td= order.state
          - if order_new(order)
            %td
              .btn-group-vertical
                .btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                  Change / Cancel Order
                  %span.caret
                %ul.dropdown-menu
                  %li
                    =link_to "Cancel order", cancel_user_order_path(@user, order), method: :delete, class: "btn btn-default"
                  %li
                    =link_to "Change order", edit_user_order_path(@user, order), method: :get, class: "btn btn-default"
          - else
            %td
              =link_to "Remove from history", cancel_user_order_path(@user, order), method: :delete, class:"btn btn-default"

  - else
    %h3.center= "No orders exist currently for #{@user.first_name}"

